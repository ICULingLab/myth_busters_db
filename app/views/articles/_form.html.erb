<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table style="width:100%; max-width:800px; border:2px solid black">
  <tbody>
  <tr class="field">
    <th style="width:5em"><%= form.label :aid %></th>
    <td>
      <% if params[:aid].present? %>
        <%= form.text_field :aid, value: params[:aid] %>
      <% else %>
        <%= form.text_field :aid %>
      <% end %>
    </td>
  </tr>

  <tr class="field">
    <th><%= form.label :title %></th>
    <td><%= form.text_field :title, style: "box-sizing: border-box; width:100%" %></td>
  </tr>

  <tr class="field">
    <th><%= form.label :body %></th>
    <td><%= form.text_area :body, style: "box-sizing: border-box; width:100%" %></td>
  </tr>

  <tr class="field">
    <th><%= form.label :lcode %></th>
    <td><%= form.text_field :lcode %></td>
  </tr>

  <tr class="field">
    <th><%= form.label :scode %></th>
    <td><%= form.text_field :scode %></td>
  </tr>

  <tr class="field">
    <th><%= form.label :author %></th>
    <td><%= form.text_field :author %></td>
  </tr>

  <tr class="actions">
    <td colspan="2" style="text-align:center"><%= form.submit %></td>
  </tr>
  </tbody>
</table>
<% end %>
